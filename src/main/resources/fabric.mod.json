{
  "schemaVersion": 1,
  "id": "clientblockhighlighting",
  "version": "${mod_version}",

  "name": "ClientBlockHighlighting",
  "description": "Client Side Block Highlighter",
  "authors": [
    "Denanu"
  ],
  "environment": "client",
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/clientblockhighlighting/icon.png",

  "entrypoints": {
    "client": [
      "net.denanu.clientblockhighlighting.ModClient"
    ],
    "main": [
      "net.denanu.clientblockhighlighting.Mod"
    ],
    "modmenu": [
      "net.denanu.clientblockhighlighting.compat.modmenu.ModMenuImpl"
    ],
    "cardinal-components-chunk": [
       "net.denanu.clientblockhighlighting.components.ChunkComponents"
    ]
  },
  "mixins": [
    "clientblockhighlighting.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  
  "custom": {
        "cardinal-components": [
            "clientblockhighlighting:chunkhighlight"
        ]
    }
